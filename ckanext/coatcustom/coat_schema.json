{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "A reimplementation of the default CKAN dataset schema",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "version",
      "label": "Version",
      "validators": "ignore_missing unicode package_version_validator",
      "form_snippet": null
    },
    {
      "field_name": "owner_org",
      "required": true,
      "validators": "ignore_missing",
      "label": "Module",
      "preset": "dataset_organization"
    },
    {
      "field_name": "private",
      "label": "Visibility",
      "required": true,
      "validators": "str_to_bool",
      "create_validators": "str_to_bool private_on_creation",
      "edit_validators": "str_to_bool",
      "form_snippet": "visibility.html",
      "display_snippet": "visibility.html",
      "help_text": "Public datasets: metadata available to everybody / resource available only if embargo is not set or is expired. Private dataset: available to members and editor of the module. New datasets should be set as private in order to add resources, as public dataset are immutable."
    },
    {
      "field_name": "notes",
      "required": true,
      "validators": "ignore_missing",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
    {
      "field_name": "tag_string",
      "required": true,
      "validators": "ignore_missing",
      "label": "tags (keywords)",
      "preset": "tag_string_autocomplete_custom",
      "choices_helper": "scheming_multiple_choice",
      "sorted_choices": true,
      "form_placeholder": "choose one or more keywords from the COAT list",
      "help_text": "Select one or more appropriate tags; start to type to search."
    },
    {
      "field_name": "topic_category",
      "required": true,
      "validators": "ignore_missing",
      "label": "Topic Category Code",
      "preset": "select",
      "form_placeholder": "INSPIRE/ISO Topic Categories",
      "choices_helper": "scheming_topic_category_choices"
    },
    {
      "field_name": "embargo",
      "label": "Embargo end date",
      "preset": "embargo",
      "help_text": "Choose an embargo end date. Leave empty if embargo not needed"
    },
    {
      "field_name": "license_id",
      "required": true,
      "validators": "ignore_missing",
      "label": "License",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/",
      "preset": "select",
      "choices": [
        {
          "value": "CC-BY_4.0",
          "label": "Creative Commons Attribution (CC-BY 4.0)"
        },
        {
          "value": "NLOD",
          "label": "Norwegian Licence for Open Government Data (NLOD)"
        }
      ]
    },
    {
      "field_name": "author",
      "required": true,
      "validators": "ignore_missing",
      "label": "Contact Person",
      "form_placeholder": "data collector/creator or maintainer",
      "display_property": "dc:creator"
    },
    {
      "field_name": "publisher",
      "required": true,
      "validators": "ignore_missing",
      "label": "Organization Name",
      "form_placeholder": "Name of the contact person's organization",
      "display_property": "dc:publisher",
      "help_text": "Affiliation of the dataset's Contact person, or Institution responsible for data dataset creation"
    },
    {
      "field_name": "author_email",
      "label": "Email Address",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:creator",
      "display_snippet": "email.html",
      "display_email_name_field": "contact"
    },
    {
      "field_name": "position",
      "label": "Title of Position",
      "form_placeholder": "eg. Researcher, project manager, technician..."
    },
    {
      "field_name": "associated_parties",
      "label": "Associated Parties",
      "form_placeholder": "eg. list of cooperating institutions, academy, enterprises... "
    },
    {
      "field_name": "persons",
      "label": "Persons",
      "form_placeholder": "Key people related to the dataset (eg: field technicians, PhD students...) "
    },
    {
      "field_name": "temporal_start",
      "label": "Temporal Extent - start date",
      "preset": "date"
    },
    {
      "field_name": "temporal_end",
      "label": "Temporal Extent - end date",
      "preset": "date"
    },
    {
      "field_name": "location",
      "label": "Geographic Location",
      "help_text": "Data collection location. Choose the most detailed possible. You can also choose several.",
      "preset": "multiple_choice_autocomplete",
      "choices_helper": "scheming_multiple_choice",
      "validators": "select_parent_locations multiple_to_json",
      "sorted_choices": true
    },
    {
      "field_name": "scientific_name",
      "label": "Scientific Name",
      "form_placeholder": "Scientific name - Taxonomy",
      "validators": "ignore_missing",
      "preset": "multiple_choice_autocomplete",
      "choices_helper": "scheming_multiple_choice",
      "validators": "multiple_to_json",
      "sorted_choices": true,
      "help_text": "Scientific name. Choose the most detailed possible. You can also choose several."
    },
    {
      "field_name": "resource_citations",
      "label": "Resource Citation",
      "form_placeholder": "citation for the resource"
    },
    {
      "field_name": "scripts",
      "label": "Associated Scripts",
      "form_placeholder": "http://example.com/repository.git",
      "display_snippet": "link.html"
    },
    {
      "field_name": "protocol",
      "label": "Study Protocol link",
      "form_placeholder": "http://example.com/protocol.json",
      "display_snippet": "link.html"
    },
    {
      "field_name": "bibliography",
      "label": "Bibliographic citation",
      "form_placeholder": "http://example.com/publication.pdf",
      "display_snippet": "link.html"
    },
    {
      "field_name": "funding",
      "label": "Funding Source",
      "form_placeholder": "funding source for the dataset "
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "validators": "lowercase_extension resource_name_conflict",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }
  ]
}
